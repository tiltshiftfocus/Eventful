<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="darktheme"
        android:title="Dark Theme"
        android:defaultValue="false"/>

    <ListPreference
        android:key="pref_dateformat"
        android:title="Date Format"
        android:summary="Choose a formatting"
        android:entries="@array/date_formats"
        android:entryValues="@array/dateformat_values"
        android:defaultValue="dd/MM/yyyy"/>



</PreferenceScreen>